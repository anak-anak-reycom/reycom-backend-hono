model Admin {
  id         Int     @id @default(autoincrement())
  name_admin String
  email      String  @unique
  password   String
  token      String?

  @@map("admins")
}

model Category {
  id            Int       @id @default(autoincrement())
  name_category String
  job_type      String
  careers       Careers[]

  @@map("categories")
}

model Careers {
  id         Int       @id @default(autoincrement())
  job_name   String
  job_date   DateTime  @default(now())
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  @@map("careers")
}

model Applys {
  id         Int    @id @default(autoincrement())
  name_apply String
  email      String @unique
  no_hp      String
  gender     String
  domicile   String
  resume     String

  @@map("applys")
}

model Contacts {
  id                 Int    @id @default(autoincrement())
  branch             String
  branch_per_country String
  country            String
  email              String @unique
  no_hp              String
  address            String
  website            String

  @@map("contacts")
}

model Videos {
  id          Int    @id @default(autoincrement())
  title_video String
  link_video  String
  
  @@map("videos")
}
