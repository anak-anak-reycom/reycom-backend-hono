generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id         Int      @id @default(autoincrement())
  name_admin String
  email      String   @unique
  password   String
  token      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("admins")
}

model Category {
  id            Int       @id @default(autoincrement())
  name_category String
  job_type      String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  careers       Careers[]

  @@map("categories")
}

model Careers {
  id         Int       @id @default(autoincrement())
  job_name   String
  job_date   DateTime  @default(now())
  categoryId Int?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  category   Category? @relation(fields: [categoryId], references: [id])

  @@map("careers")
}

model Applys {
  id         Int      @id @default(autoincrement())
  name_apply String
  email      String   @unique
  no_hp      String
  gender     String
  domicile   String
  resume     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("applys")
}

model Contacts {
  id                 Int      @id @default(autoincrement())
  branch             String
  branch_per_country String
  country            String
  email              String   @unique
  no_hp              String
  address            String
  website            String
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  @@map("contacts")
}

model Videos {
  id          Int      @id @default(autoincrement())
  title_video String
  link_video  String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("videos")
}
